<?xml version='1.0'?>
<sdf version='1.5'>
  <%
    body_density = 1000
    body_radius = 0.3
    body_length = 2.6
    body_volume = body_length*Math::PI*body_radius**2
    spacer_radius = 0.0933402
    spacer_length = 0.127211
    spacer_volume = spacer_length*Math::PI*spacer_radius**2

    mass = body_density*(body_volume+spacer_volume)

    body_ixx = mass/12.0 * (3*body_radius**2  + body_length**2 )
    body_iyy = mass/12.0 * (3*body_radius**2  + body_length**2 )
    body_izz = mass/2.0 * body_radius**2
   
    blade_dx = 0.5
    blade_dy = 0.154178
    blade_dz = 0.05455
    blade_volume = blade_dx * blade_dy * blade_dz
    blade_mass = blade_volume * body_density

    total_blade_mass = 4*blade_mass

    blade_ixx = total_blade_mass/12.0 * (blade_dx**2 + blade_dz**2)
    blade_iyy = total_blade_mass/12.0 * (blade_dz**2 + blade_dx**2)
    blade_izz = total_blade_mass/12.0 * (blade_dx**2 + blade_dx**2)

    blade_angle = 20 * Math::PI/180

    material_block =
          '<material>
            <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Yellow</name>
            </script>
          </material>'
   %>
  <model name='submarine'>
    <pose>0 0 <%= blade_dx + 1.0 %> <%= Math::PI/2%> 0 0</pose>
    <link name='body'>
      <pose>0 0 -1.07935 0 0 0</pose>
      <inertial>
        <mass><%= mass %></mass>
        <inertia>
          <ixx><%= body_ixx %></ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy><%= body_iyy %></iyy>
          <iyz>0</iyz>
          <izz><%= body_izz %></izz>
        </inertia>
      </inertial>
      <visual name='body_visual'>
        <geometry>
          <cylinder>
            <radius><%= body_radius%></radius>
            <length><%= body_length%></length>
          </cylinder>
        </geometry>
        <%= material_block%>
      </visual>
      <collision name='body_collision'>
        <geometry>
          <cylinder>
            <radius><%= body_radius%></radius>
            <length><%= body_length%></length>
          </cylinder>
        </geometry>
      </collision>
      <visual name='spacer_visual'>
        <pose>0 0 <%= 0.299196 + 1.07935%> 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius><%= spacer_radius %></radius>
            <length><%= spacer_length %></length>
          </cylinder>
        </geometry>
        <%= material_block%>
      </visual>
      <collision name='spacer_collision'>
        <pose>0 0 <%= 0.299196 + 1.07935%> 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius><%= spacer_radius %></radius>
            <length><%= spacer_length %></length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <link name='propeller'>
      <pose>0 0 0.3455 3.14159 0 0</pose>
      <inertial>
        <mass><%= total_blade_mass %></mass>
        <inertia>
          <ixx><%= blade_ixx %></ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy><%= blade_iyy %></iyy>
          <iyz>0</iyz>
          <izz><%= blade_izz %></izz>
        </inertia>
      </inertial>

      <visual name='blade1_visual'>
        <pose><%= spacer_radius + blade_dx/2 %> 0 0 <%= blade_angle %> 0 0</pose>
        <geometry>
          <box>
            <size><%= blade_dx%> <%= blade_dy%> <%= blade_dz%></size>
          </box>
        </geometry>
        <%= material_block%>
      </visual>
      <collision name='blade1_collision'>
        <pose><%= spacer_radius + blade_dx/2 %> 0 0 <%= blade_angle %> 0 0</pose>
        <geometry>
          <box>
            <size><%= blade_dx%> <%= blade_dy%> <%= blade_dz%></size>
          </box>
        </geometry>
      </collision>
      <visual name='blade2_visual'>
        <pose>0 <%= spacer_radius + blade_dx/2 %> 0 <%= blade_angle %> 0 <%= Math::PI/2 %></pose>
        <geometry>
          <box>
            <size><%= blade_dx%> <%= blade_dy%> <%= blade_dz%></size>
          </box>
        </geometry>
        <%= material_block%>
      </visual>
      <collision name='blade2_collision'>
        <pose>0 <%= spacer_radius + blade_dx/2 %> 0 <%= blade_angle %> 0 <%= Math::PI/2 %></pose>
        <geometry>
          <box>
            <size><%= blade_dx%> <%= blade_dy%> <%= blade_dz%></size>
          </box>
        </geometry>
      </collision>

      <visual name='blade3_visual'>
        <pose><%= -(spacer_radius + blade_dx/2) %> 0 0 <%= -blade_angle %> 0 0</pose>
        <geometry>
          <box>
            <size><%= blade_dx%> <%= blade_dy%> <%= blade_dz%></size>
          </box>
        </geometry>
        <%= material_block%>
      </visual>
      <collision name='blade3_collision'>
        <pose><%= -(spacer_radius + blade_dx/2) %> 0 0 <%= -blade_angle %> 0 0</pose>
        <geometry>
          <box>
            <size><%= blade_dx%> <%= blade_dy%> <%= blade_dz%></size>
          </box>
        </geometry>
      </collision>
      <visual name='blade4_visual'>
        <pose>0 <%= -(spacer_radius + blade_dx/2) %> 0 <%= -blade_angle %> 0 <%= Math::PI/2 %></pose>
        <geometry>
          <box>
            <size><%= blade_dx%> <%= blade_dy%> <%= blade_dz%></size>
          </box>
        </geometry>
        <%= material_block%>
      </visual>
      <collision name='blade4_collision'>
        <pose>0 <%= -(spacer_radius + blade_dx/2) %> 0 <%= -blade_angle %> 0 <%= Math::PI/2 %></pose>
        <geometry>
          <box>
            <size><%= blade_dx%> <%= blade_dy%> <%= blade_dz%></size>
          </box>
        </geometry>
      </collision>

    </link>
    <joint name='spinning_joint' type='revolute'>
      <parent>body</parent>
      <child>propeller</child>
      <axis>
        <xyz>0 0 1</xyz>
        <use_parent_model_frame>1</use_parent_model_frame>
        <limit>
          <lower>-1e+12</lower>
          <upper>1e+12</upper>
          <effort>-1</effort>
          <velocity>-1</velocity>
        </limit>
        <dynamics>
          <spring_reference>0</spring_reference>
          <spring_stiffness>0</spring_stiffness>
          <damping>0</damping>
          <friction>0</friction>
        </dynamics>
      </axis>
      <pose>0 0 0 0 -0 0</pose>
      <physics>
        <ode>
          <cfm>0</cfm>
          <bounce>0</bounce>
          <velocity>0</velocity>
          <fudge_factor>0</fudge_factor>
          <limit>
            <cfm>0</cfm>
            <erp>0.2</erp>
          </limit>
          <suspension>
            <cfm>0</cfm>
            <erp>0.2</erp>
          </suspension>
        </ode>
      </physics>
    </joint>

    <allow_auto_disable>1</allow_auto_disable>

    <% fluid_density = 1000 %>

    <plugin name="submarine_body" filename="libLiftDragPlugin.so">
      <cla>0.8</cla>
      <cda>0.8</cda>
      <alpha_stall>1</alpha_stall>
      <alpha>1.1</alpha>
      <cla_stall>0</cla_stall>
      <upward>1 0 0</upward>
      <forward>0 0 -1</forward>
      <area><%= 2*Math::PI*body_radius*body_length %></area>
      <air_density><%= fluid_density%></air_density>
      <link_name>body</link_name>
    </plugin>

    <plugin name="submarine_propeller" filename="libLiftDragPlugin.so">
      <cla>1.05</cla>
      <cda>1.05</cda>
      <alpha_stall>1</alpha_stall>
      <alpha>1.1</alpha>
      <cla_stall>0</cla_stall>
      <upward>1 0 0</upward>
      <forward>0 0 -1</forward>
      <area><%= 2*(blade_dx*blade_dy*2 + blade_dx*blade_dz*2 + blade_dy*blade_dz*2) %></area>
      <air_density><%= fluid_density%></air_density>
      <link_name>propeller</link_name>
    </plugin>

    <plugin name="buoyancy" filename="libBuoyancyPlugin.so">
      <fluid_density><%= fluid_density%></fluid_density>
    </plugin>

  </model>
</sdf>
